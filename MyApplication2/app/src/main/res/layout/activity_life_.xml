<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_life_"
    android:label="@string/app_name_life"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="activitytest.example.com.myapplication2.LIFE_Activity"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="429dp"
        android:layout_weight="0.97"
        android:weightSum="1">


        <ImageView
            android:layout_width="260dp"
            android:layout_height="172dp"
            app:srcCompat="@drawable/day_worknum"
            android:id="@+id/imageView_worknum"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="260dp"
            android:layout_height="172dp"
            app:srcCompat="@drawable/day_payplay"
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageView_payplay" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:id="@+id/button_day"
            android:text="@string/app_name_day"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:id="@+id/button_life"
            android:text="@string/app_name_life"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:id="@+id/button_my"
            android:text="@string/app_name_my"/>
    </LinearLayout>
</LinearLayout>
