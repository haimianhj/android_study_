<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_day_"
    android:label="@string/app_name_day"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activitytest.example.com.myapplication2.DAY_Activity"
    android:orientation="vertical"
    android:weightSum="1"
    android:baselineAligned="false">


   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="429dp"
       android:layout_weight="0.97"
       android:weightSum="1">

      <activitytest.example.com.myapplication2.ClockView
          android:layout_width="273dp"
          android:layout_height="282dp"
          android:layout_gravity="center"
          android:layout_weight="0.46" />

      <TextView
          android:text="请新建计划表，每日任务会在此直接显示"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/plan_out"
          android:layout_weight="0.49" />

      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/button_next_plan"
          android:text="详情请点击..."
          />


   </LinearLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <Button
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_gravity="bottom"
          android:id="@+id/button_day"
          android:text="@string/app_name_day"
          />

      <Button
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_gravity="bottom"
          android:id="@+id/button_life"
          android:text="@string/app_name_life"
          />

      <Button
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_gravity="bottom"
          android:id="@+id/button_my"
          android:text="@string/app_name_my"/>
   </LinearLayout>
</LinearLayout>
