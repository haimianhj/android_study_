<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_day_"
    android:label="@string/app_name_my"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="activitytest.example.com.myapplication2.MY_Activity"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:id="@+id/login_avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:src="@drawable/photo" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="429dp"
        android:layout_weight="0.97"
        android:weightSum="1">


        <Button
            android:id="@+id/button_center_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人中心" />

        <Button
            android:text="设置"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_setting" />

        <Button
            android:text="关于"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_about_ourself" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:id="@+id/button_day"
            android:text="@string/app_name_day"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:id="@+id/button_life"
            android:text="@string/app_name_life"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:id="@+id/button_my"
            android:text="@string/app_name_my"/>
    </LinearLayout>
</LinearLayout>